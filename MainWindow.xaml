<Window x:Class="WpfKP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKP"
        mc:Ignorable="d"
        Title="Главное окно" Height="323" Width="300">
    <Grid Background="#3df5a2">
        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch"  HorizontalAlignment ="Stretch" Margin="10,10,10,10" >
            <Button x:Name="BtCategory" Content="Категории товара" Height="50" Width="150"
 HorizontalAlignment="Center" VerticalAlignment="Top"
 Margin="5,10,10,5" IsDefault="True" Click="BtCategory_Click"/>
            <Button x:Name="BtProduct" Content="Товар" Height="50" Width="150"
 HorizontalAlignment="Center" VerticalAlignment="Top"
 Margin="5,10,10,5" IsDefault="True" Click="BtProduct_Click"/>
            <Button x:Name="BtOrder" Content="Заказ" Height="50" Width="150"
 HorizontalAlignment="Center" VerticalAlignment="Top"
 Margin="5,10,10,5" IsDefault="True" Click="BtOrder_Click"/>
            <Button x:Name="BtOrderDetail" Content="Детали заказа" Height="50" Width="150"
 HorizontalAlignment="Center" VerticalAlignment="Top"
 Margin="5,10,10,5" IsDefault="True" Click="BtOrderDetail_Click"/>
        </StackPanel>
    </Grid>
</Window>
